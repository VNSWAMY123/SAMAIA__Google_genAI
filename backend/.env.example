# Backend Environment Variables

# Server Configuration
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret_key_here

# API Keys
API_KEY=your_api_key_here

# Environment
NODE_ENV=development

# ===== GOOGLE CLOUD PLATFORM / VERTEX AI CONFIGURATION =====
# Required for Gemini AI integration

# Google Cloud Project ID (get from GCP Console)
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id

# Google Cloud Location/Region for Vertex AI
# Common options: us-central1, us-east1, europe-west1, asia-southeast1
GOOGLE_CLOUD_LOCATION=us-central1

# Authentication Method 1: Service Account Key File Path
# Path to your service account JSON key file
# Download from GCP Console > IAM & Admin > Service Accounts
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# Authentication Method 2: Service Account Key JSON Content (alternative to file path)
# Entire JSON content of the service account key (for deployment environments)
# GOOGLE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"..."}'

# ===== GEMINI MODEL CONFIGURATION =====
# Gemini model to use (default: gemini-1.5-flash-preview-0514)
# Options: gemini-1.5-flash-preview-0514, gemini-1.5-pro-preview-0514, gemini-1.0-pro
GEMINI_MODEL=gemini-1.5-flash-preview-0514

# Maximum output tokens (default: 8192)
GEMINI_MAX_TOKENS=8192

# Temperature for response creativity (0.0-1.0, default: 0.4)
# Lower = more focused/deterministic, Higher = more creative/random
GEMINI_TEMPERATURE=0.4

# Top-P for response diversity (0.0-1.0, default: 0.95)
# Controls diversity of token selection
GEMINI_TOP_P=0.95

# ===== ADDITIONAL CONFIGURATION =====
# Enable/disable specific features
ENABLE_WELLNESS_ADVICE=true
ENABLE_CHAT_HISTORY=true
ENABLE_CONTENT_GENERATION=true

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=60

# Logging level
LOG_LEVEL=info
